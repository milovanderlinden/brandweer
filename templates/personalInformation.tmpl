
{{#information}}
    <div class="information">
        <h2>{{personalInformation.header}}<button class="hideInformation"><span>close</span></button></h2>
        <div>{{{personalInformation.body}}}</div>
    </div>
{{/information}}

{{#personalInformation}}
    <div class="copy">
        <h2 class="main">{{copy.header}}</h2>
        <div>{{{copy.body}}}</div>
    </div>

    <div class="fields">
        {{#fields}}
            <div class="f-container {{#if required}}{{required}}{{/if}}">
                <label
                        for="contact-{{name}}"
                        class="f-label">{{name}}</label>
                <input
                        type="{{type}}"
                        id="contact-{{name}}"
                        value="{{value}}"
                        placeholder="{{placeholder}}"
                        class="f-input"/>
                        
                        
            </div>
        {{/fields}}
        
    </div>
    

{{/personalInformation}}
<button type="submit" id="confirm" class="f-button f-button-primary">Bevestig en naar de volgende vraag</button>